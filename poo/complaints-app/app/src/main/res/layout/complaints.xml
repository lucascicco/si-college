<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_margin="8dp" app:cardCornerRadius="8dp" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:elevation="8dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="108dp">

    <TextView
        android:id="@+id/c_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:textSize="15sp"
        tools:text="Lore ipsum" />

    <TextView
        android:id="@+id/c_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        tools:text="Lore ipsum" />

    <TextView
        android:id="@+id/c_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        tools:text="Lore ipsum" />


  </RelativeLayout>

</android.support.v7.widget.CardView>
